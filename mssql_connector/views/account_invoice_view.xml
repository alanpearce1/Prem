<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_invoice_inherited_form_view" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[2]" position='after'>
                    <page string='Additional Info'>
                        <group>
                            <group>
                                <field name="x_studio_clinicid"/>
                                <field name="x_studio_clinicid_1"/>
                                <field name="x_studio_custid"/>
                                <field name='x_studio_custid_1'/>
                            </group>
                            <group>
                                <field name="x_studio_soid_2" />
                                <field name="x_studio_soid_3"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
